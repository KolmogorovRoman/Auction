@page
@model Auction.Pages.Lots.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Lot</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Lot.ID" />
            <div class="form-group">
                <label asp-for="Lot.StartCost" class="control-label"></label>
                <input asp-for="Lot.StartCost" class="form-control" />
                <span asp-validation-for="Lot.StartCost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Lot.ReserveCost" class="control-label"></label>
                <input asp-for="Lot.ReserveCost" class="form-control" />
                <span asp-validation-for="Lot.ReserveCost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Lot.Steep" class="control-label"></label>
                <input asp-for="Lot.Steep" class="form-control" />
                <span asp-validation-for="Lot.Steep" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Lot.CreationTime" class="control-label"></label>
                <input asp-for="Lot.CreationTime" class="form-control" />
                <span asp-validation-for="Lot.CreationTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
